\r\n    \t\t<tr><td class=ver10 align=center style=padding:2px;><img src=../images/pppus.gif alt=\'Public Papers of the Presidents\'></td></tr><tr><td class=ver10 align=center style=padding:2px;><img src=../images/volumes/1976-77-III.jpg alt=\'Gerald R. Ford<br>1976-77: Book III\'></td></tr><tr><td class=ver10 align=center>Gerald R. Ford<br>1976-77: Book III</td></tr>\t\t\t\t\t    \t    \t\t\t\t\t\t\t\t\t\t  <tr><td class=ver10 bgcolor=#999999><img src=../images/spacer.gif height=1 width=1></td></tr><tr><td align=center style=padding:4px;><a href=# onClick=MM_openBrWindow(\'http://www.presidency.ucsb.edu/mediaclip.php?clipid=6414\',\'media\',\'scrollbars=yes,width=500,height=400\')><img src=http://www.presidency.ucsb.edu/images/icons/microphone.jpg width=34 height=43 align=absmiddle border=0></a><span class=ver10>&nbsp;<a href=# onClick=MM_openBrWindow(\'http://www.presidency.ucsb.edu/mediaclip.php?clipid=6414\',\'media\',\'scrollbars=yes,width=500,height=400\')>audio</a>&nbsp;&nbsp;<img src=../images/qt_24x24.gif align=\'middle\'></span></td></tr>\t\t<tr><td class=\'ver10\' bgcolor=\'#999999\'><img src=\'../images/spacer.gif\' height=\'1\' width=\'1\'></td></tr><tr><td class=ver10 align=center style=padding:2px; bgcolor=\'#F3F3F3\'>Location:<br><img src=../images/flags/CA.jpg><br>United States<br>California</td></tr>\t\t\t<tr><td class="ver10" bgcolor="#999999"><img src="../images/spacer.gif" height="1" width="1"></td></tr>\r\n\t<tr><td class="ver10" align="center" style="padding-top:2px;">Font Size:</td></tr>\r\n\t<tr><td align="center" style="padding:3px"><SCRIPT language=JavaScript type=text/javascript>\r\n\t\t\tdocument.write(\'<!-- fontsize=\' + fontsize + \'-->\')\r\n\t\t\tif (fontsize == 12) {\r\n\t\t\t\tdocument.write(\'<a href="#" onClick="changeFontSize(10); return false;"><img src="http://www.presidency.ucsb.edu/images/text_small.gif" alt="small" width="16" height="16" hspace="1" vspace="1" border="0" \\/><\\/a>\');\r\n\t\t\t} else {\r\n\r\n\t\t\t\tdocum